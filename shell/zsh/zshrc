# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
EDITOR="emacs"

if [ -n "$INSIDE_EMACS" ]; then
    ZSH_THEME="rkj-repos"
else
    #ZSH_THEME="smt"
    #ZSH_THEME="trapd00r"

    if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
        ZSH_THEME="amuse"
    else
        ZSH_THEME="jonathan"
    fi
fi

GNUPGHOME=/media/sean/Security/gpghome
if [ -f "${GNUPGHOME}/gpg-agent-info-$(hostname)" ]; then
    . "${GNUPGHOME}/gpg-agent-info-$(hostname)"
    export GPG_AGENT_INFO
    export SSH_AUTH_SOCK
    export SSH_AGENT_PID
fi
GPG_TTY=$(tty)
export GPG_TTY

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

alias bfg="java -jar ~/bin/bfg.jar"
alias muf="mu find -u -f 'i d f s'"

alias rake='noglob rake'

# Set to this to use case-sensitive completion
CASE_SENSITIVE="true"

# Comment this out to disable bi-weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Uncomment to change how many often would you like to wait before auto-updates occur? (in days)
# export UPDATE_ZSH_DAYS=13

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
COMPLETION_WAITING_DOTS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git bundler common-aliases cp ant cake coffee git-extras git-flow git-remote-branch github gnu-utils go golang history node npm perl python rails rake ssh-agent themes zsh-syntax-highlighting gem rbenv heroku mosh nyan redis-cli rsync sudo vagrant)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=./bin:/usr/local/java/bin:/usr/local/java/jre/bin:/usr/local/phantomjs/bin:/usr/local/casperjs/bin:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:~/bin:~/bin/boris/bin:~/bin/rainbarf:/usr/local/node/bin:~/.rbenv/bin:/usr/local/eqntott/bin:/usr/local/gearman/bin:/usr/local/gearman/sbin:/usr/local/adt/sdk/platform-tools:/usr/local/adt/sdk/tools:/usr/local/arduino:/usr/local/processing

eval "$(rbenv init -)"

x-copy-region-as-kill () {
    zle copy-region-as-kill
    print -rn $CUTBUFFER | xsel -b -i
}
zle -N x-copy-region-as-kill
x-kill-region () {
    zle kill-region
    print -rn $CUTBUFFER | xsel -b -i
}
zle -N x-kill-region
x-yank () {
    CUTBUFFER=`xsel -b -o`
    zle yank
}
zle -N x-yank

bindkey -e '\eW' x-copy-region-as-kill
bindkey -e '^W' x-kill-region
bindkey -e '^Y' x-yank

